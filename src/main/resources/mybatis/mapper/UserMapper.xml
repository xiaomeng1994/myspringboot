<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meng.user.mapper.UserMapper" >

    <resultMap id="BaseResultMap" type="com.meng.moudle.user.vo.User" >
        <id column="user_id" property="userId" jdbcType="VARCHAR" />
        <id column="user_name" property="userName" jdbcType="VARCHAR" />
        <id column="name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="gender" property="gender" jdbcType="VARCHAR" />
        <result column="occupation" property="occupation" jdbcType="VARCHAR" />
    </resultMap>

    <!-- 查询用户集合 -->
    <select id="getUserList" resultMap="BaseResultMap">
        select user_id,user_name,name,age,gender,occupation,phone from m_user
    </select>

    <!-- 根据id查询用户 -->
    <select id="getUserById" resultMap="BaseResultMap" parameterType="java.lang.String" >
        select user_id,user_name,name,age,gender,occupation,phone from m_user where user_id = #{userId,jdbcType=VARCHAR}
    </select>

    <!-- 根据id删除用户 -->
    <delete id="deleteUserById" parameterType="java.lang.String" >
        delete from m_user where user_id = #{userId,jdbcType=VARCHAR}
    </delete>

    <!-- 新增用户 -->
    <insert id="insertUser" parameterType="com.meng.moudle.user.vo.User" >
        insert into m_user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                user_id,
            </if>
            <if test="userName != null" >
                user_name,
            </if>
            <if test="name != null" >
                name,
            </if>
            <if test="age != null" >
                age,
            </if>
            <if test="gender != null" >
                gender,
            </if>
            <if test="occupation != null" >
                occupation,
            </if>
            <if test="phone != null" >
                phone,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                #{userId,jdbcType=VARCHAR},
            </if>
            <if test="userName != null" >
                #{userName,jdbcType=VARCHAR},
            </if>
            <if test="name != null" >
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="age != null" >
                #{age,jdbcType=INTEGER},
            </if>
            <if test="gender != null" >
                #{gender,jdbcType=VARCHAR},
            </if>
            <if test="occupation != null" >
                #{occupation,jdbcType=VARCHAR},
            </if>
            <if test="phone != null" >
                #{phone,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!-- 根据id修改用户 -->
    <update id="updateUserById" parameterType="com.meng.moudle.user.vo.User" >
        update m_user
        <set >
            <!-- 用户名不允许修改 -->
            <!--<if test="userName != null" >
                user_name = #{userName,jdbcType=VARCHAR},
            </if>-->
            <if test="name != null" >
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="age != null" >
                age = #{age,jdbcType=INTEGER},
            </if>
            <if test="gender != null" >
                gender = #{gender,jdbcType=VARCHAR},
            </if>
            <if test="occupation != null" >
                occupation = #{occupation,jdbcType=VARCHAR},
            </if>
            <if test="phone != null" >
                phone = #{phone,jdbcType=VARCHAR},
            </if>
        </set>
        where user_id = #{userId,jdbcType=VARCHAR}
    </update>

</mapper>