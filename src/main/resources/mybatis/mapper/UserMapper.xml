<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meng.user.mapper.UserMapper" >

    <resultMap id="BaseResultMap" type="com.meng.user.vo.User" >
        <id column="userId" property="userId" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="gender" property="gender" jdbcType="VARCHAR" />
        <result column="occupation" property="occupation" jdbcType="VARCHAR" />
    </resultMap>

    <!-- 查询用户集合 -->
    <select id="getUserList" resultMap="BaseResultMap">
        select userId,age,gender,occupation from u_user order by age
    </select>

    <!-- 根据id查询用户 -->
    <select id="getUserById" resultMap="BaseResultMap" parameterType="java.lang.String" >
        select userId,age,gender,occupation from u_user where userId = #{userId,jdbcType=VARCHAR}
    </select>

    <!-- 根据id删除用户 -->
    <delete id="deleteUserById" parameterType="java.lang.String" >
        delete from u_user where userId = #{userId,jdbcType=VARCHAR}
    </delete>

    <!-- 新增用户 -->
    <insert id="insertUser" parameterType="com.meng.user.vo.User" >
        insert into u_user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                userId,
            </if>
            <if test="age != null" >
                age,
            </if>
            <if test="gender != null" >
                gender,
            </if>
            <if test="occupation != null" >
                occupation,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                #{userId,jdbcType=VARCHAR},
            </if>
            <if test="age != null" >
                #{age,jdbcType=INTEGER},
            </if>
            <if test="gender != null" >
                #{gender,jdbcType=VARCHAR},
            </if>
            <if test="occupation != null" >
                #{occupation,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!-- 根据id修改用户 -->
    <update id="updateUserById" parameterType="com.meng.user.vo.User" >
        update u_user
        <set >
            <if test="age != null" >
                age = #{age,jdbcType=INTEGER},
            </if>
            <if test="gender != null" >
                gender = #{gender,jdbcType=VARCHAR},
            </if>
            <if test="occupation != null" >
                occupation = #{occupation,jdbcType=VARCHAR},
            </if>
        </set>
        where userId = #{userId,jdbcType=VARCHAR}
    </update>

</mapper>